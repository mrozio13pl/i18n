{
    "extends": "@tsconfig/node18",
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "bundler",
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@mrozio/i18n": ["./src/index.ts"],
            "@mrozio/i18n/*": ["./src/*.ts"]
        }
    },
    "include": ["./src/**/*.ts", "./src/**/*.tsx", "./tests/**/*.ts", "./tests/**/*.tsx", "vitest.config.ts"],
}
